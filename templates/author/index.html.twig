{% extends 'base.html.twig' %}

{% block title %}Listes des auteurs
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px / 1.5 sans-serif;
    }
    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="example-wrapper">
    <h1>
      {{ title }}
    </h1>

    <table>
      <thead>
        <td>Nom</td>
        <td>Action</td>
      </thead>
      <tbody>
        {% for author in authors %}
          <tr>
            <td>{{author.name}}</td>
            <td>
              <a href="{{ path('app_author_show', {id:author.id}) }}" class="btn btn-primary">Voir</a>
            </td>
          </tr>
        {% else %}
          <tr>
            Aucun livre Ã  afficher
          </tr>
        {% endfor %}
      </tbody>

    </table>

  {% endblock %}
